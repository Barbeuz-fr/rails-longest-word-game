<h1>New game</h1>

<!-- Letters -->
<ul>
  <% @letters.each do |letter| %>
  <li class="letter">
      <%= letter %>
  </li>
  <% end %>
</ul>



<!-- Form -->

<form action="/score" method="post">
  <label for="answer">What is the longest word you can find?</label>
  <input type="text" name="answer" id="answer" value="<%= params[:answer] %>" placeholder="what is your word?">
  <input type="submit" value="Validate">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
